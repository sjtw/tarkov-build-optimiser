{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to debugger",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "host": "127.0.0.1",
      "port": 4000,
      "showLog": true
    },
    {
      "name": "Run API - Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/tarkov-build-optimiser-api/main.go",
      "envFile": "${workspaceFolder}/.env",
      "showLog": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
